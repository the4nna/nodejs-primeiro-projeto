<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head.ejs") %>
</head>

<body>

    <%- include("partials/header.ejs") %>

        <section class="container">
            <%- include("partials/navbar.ejs") %>

                <article class="content">
                    <h1> Posts</h1>

                    <div class="posts">
                        <% posts.forEach((item)=> { %>
                            <div class="post">
                                <h3>
                                    <%= item.title %>
                                </h3>
                                <p>
                                    <%= item.text %>
                                </p>
                                <% if(item.stars) { %>
                                    <% for( let index=0; index < item.stars; index++ ) { %>
                                        <img src="https://i.pinimg.com/564x/42/cd/48/42cd48d9161b84f2b690f19511bd7a25.jpg"
                                            alt="star" width="30px" class="star-icon">
                                        <% } %>
                                            <% } %>
                            </div>
                            <% }) %>
                    </div>
                </article>
        </section>

        <%- include("partials/footer.ejs") %>

            <%- include("partials/foot.ejs") %>

</body>

</html>